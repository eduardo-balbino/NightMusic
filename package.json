{
  "name": "nightmusic-frontend",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "backend:dev": "ts-node-dev --respawn --transpile-only --loader ts-node/esm backend/src/server.ts",
    "backend:build": "tsc -p tsconfig.json",
    "backend:start": "node dist/backend/src/server.js",
    "lint": "eslint \"app/**/*.{js,jsx,ts,tsx}\" --ext .js,.jsx,.ts,.tsx --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern build --fix",
    "format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "stylelint": "stylelint \"app/styles/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint --fix \"app/styles/**/*.{css,scss}\"",
    "diagnosticar": "oraculo diagnosticar",
    "formatar": "oraculo formatar --write",
    "otimizar": "oraculo otimizar-svg"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "minimatch": "^10.1.1",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.6.2",
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.12",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.1.11",
    "autoprefixer": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.0.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.4.0"
  }
}
